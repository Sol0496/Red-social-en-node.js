

<div class="container p-4">
 <div class="row">
<div class="col-md-8">
<div class="card">

  <div class="card-header bg-dark text-white">
    <i class="far fa-image"></i> Upload an Image
  </div>

  {{!-- IMAGE UPLOAD FORM --}}
  <div class="card-body">
    <form action="/images/image" method="POST" enctype="multipart/form-data">

      <div class="form-group">
        <div class="input-group">
          <div class="custom-file">
            <input type="file" name="image" class="custom-file-input" id="inputGroupFile"
              aria-describedby="inputGroupFileAddon" required />
            <label class="custom-file-label" for="inputGroupFile">Choose file</label>
          </div>
        </div>
      </div>

      <div class="form-group">
        <input type="text" name="title" class="form-control" placeholder="Title for the Image" required>
      </div>

      <div class="form-group">
        <textarea name="description" rows="2" class="form-control" placeholder="Deescription for the Image"
          required></textarea>
      </div>

      <div class="form-group">
        <button class="btn btn-success">
          <i clas s="fa fa-upload"></i> Upload Image
        </button>
      </div>

    </form>
  </div>
</div>

<div class="card mt-2">
  <div class="card-header bg-dark text-white">
    <i class="far fa-images"></i> Recent Uploads
  </div>
  <div class="card-body">
    <div class="row">
      {{#each images}}
      <div class="col-md-4 text-center">
        <a href="/images/image/{{ uniqueId  }}">
          <img src="/img/uploads/{{filename}}" alt="{{title}}" class="w-100 h-100 img-thumbnail">
        </a>
      </div>
      {{/each}}
    </div>     

  </div>
</div> 

</div>



        <div class="col-md-4">
          <div class="card mb-2">
           <div class="card-header bg-dark text-white">
             <h5>
               <i class="far fa-chart-bar"></i> Stats
            </h5>
          </div>
            <div class="card-body">
              <p><i class="fas fa-images"></i> Images: {{sidebar.stats.images}}</p>
              <p><i class="fas fa-comments"></i> Comments: {{sidebar.stats.comments}}</p>
              <p><i class="fas fa-eye"></i> Views: {{sidebar.stats.views}}</p>
              <p><i class="fas fa-heart"></i> Likes: {{sidebar.stats.likes}}</p>
            </div>
        </div>

            <div class="card mb-2">

             <div class="card-header bg-dark text-white">
               <h5>
                 <i class="fas fa-fire"></i> Most Popular
              </h5>
             </div>

            <div class="card-body">
              <div class="row">
                {{#each sidebar.popular}}
                   <div class="col-md-4">
                     <a href="/images/image/{{uniqueId}}">
                       <img src="/img/uploads/{{filename}}" class="w-100 h-100 image-thumbnail">
                    </a>
                  </div>
               {{/each}}
             </div>
           </div>

         </div> 

         {{#if sidebar.comments}}

<div class="card mt-2">
  <div class="card-header bg-dark text-white">
    <h5>
      <i class="fas fa-comments"></i> Latest Comments
    </h5>
  </div>
  <div class="card-body">
      {{#each sidebar.comments}}
      <div class="row">
        <div class="col">
          <a href="/images/{{image.uniqueId}}">
            <img src="/img/uploads/{{image.filename}}" class="img-thumbnail w-70">
          </a>
        </div>
        <div class="col">
          <blockquote class="w-100">
            <p>{{comment}}</p>
            <footer class="blockquote-footer">
              <span>{{name}}</span>
              <span>{{timeago timestamp}}</span>
            </footer>
          </blockquote>
        </div>
      </div>
      {{/each}}
  </div>
</div>
{{/if}}


        </div> 

       
 </div>
